{% import "_includes/macros" as macros %}

{% for block in entry.body.all() %}

	{% switch block.type %}

		{% case "heading" %}

			{% set level = attribute({
				1: { tag: 'h2', class: 'h2' },
				2: { tag: 'h3', class: 'h3' },
				3: { tag: 'h4', class: 'h4' },
			}, block.hx.value ?? 1) %}

			{{ tag(level.tag, {
				class: level.class,
				text: block.heading,
				id: block.heading|kebab,
			}) }}

			<div class="c-wavy"></div>

		{% case "text" %}

			<div class="typeset">
				{{ block.text }}
			</div>

		{% case "blockquote" %}

			<div class="l-container-text u-mb-300">
				<blockquote class="c-article__quote">
					<h3 class="h3 u-mb-100">{{ block.quote }}</h3>
					<p>{{ block.citation }}</p>
				</blockquote>
			</div>

		{% case "images" %}

			{{ macros.image(block.images[0] ?? null, {
				ratio: 1 / 1,
				alt: image.alt ?? null,
				widths: [ 340, 600, 720 ],
				width: 800,
			}) }}

	{% endswitch %}

{% endfor %}
